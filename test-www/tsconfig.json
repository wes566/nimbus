{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "paths": {
            "nimbus": ["../src/index.ts"]
        }
    },
    "include": ["test/"]
}
